@{
}
@model IEnumerable<Mission06_Fellows.Models.MovieViewModel>


<h1>Movie Collection</h1>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Year</th>
            <th scope="col">Director</th>
            <th scope="col">Category</th>
            <th scope="col">Rating</th>
            <th scope="col">Edited</th>
            <th scope="col">Copied to Plex</th>
            <th scope="col">Lent To</th>
            <th scope="col">Notes</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.CategoryName</td>
                <td><span class="badge bg-secondary">@movie.Rating</span></td>
                <td>@(movie.Edited == true ? "Yes" : "No")</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                <td>@(string.IsNullOrEmpty(movie.LentTo) ? "-" : movie.LentTo)</td>
                <td>@(string.IsNullOrEmpty(movie.Notes) ? "-" : movie.Notes)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = movie.MovieId })" class="btn btn-sm btn-primary">
                        Edit
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@movie.MovieId" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
